# this is a comment

TARGET=mdrender-FIS

default: pdflatex

pdflatex: ${TARGET}.tex
	pdflatex ${TARGET}.tex
	#bibtex ${TARGET}
	pdflatex ${TARGET}.tex
	pdflatex ${TARGET}.tex

bib: bib
	bibtex ${TARGET}

dvi: ${TARGET}.tex 
	#bibtex wants to use aux files that are generated by latex, and latex doesn't get the refs unless you run it twice after bibtex 
	latex ${TARGET}.tex
	bibtex $(TARGET)
	latex $(TARGET).tex
	latex $(TARGET).tex

ps: dvi
	dvips -R -Poutline -t letter ${TARGET}.dvi -o ${TARGET}.ps

ps2pdf: ps
	ps2pdf ${TARGET}.ps

clean-dvi:
	rm -f ${TARGET}.aux
	rm -f ${TARGET}.log
	rm -f ${TARGET}.dvi
	rm -f ${TARGET}.out
	rm -f ${TARGET}.toc

clean-ps: clean-dvi
	rm -f ${TARGET}.ps

clean-pdf: clean-ps
	rm -f ${TARGET}.bbl
	rm -f ${TARGET}.blg
	rm -f ${TARGET}.pdf


clean: clean-pdf



